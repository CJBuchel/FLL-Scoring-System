{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NetworkSchema",
  "type": "object",
  "required": [
    "_login_request",
    "_login_response",
    "_register_request",
    "_register_response",
    "_tournament_config_set_name_request"
  ],
  "properties": {
    "_login_request": {
      "$ref": "#/definitions/LoginRequest"
    },
    "_login_response": {
      "$ref": "#/definitions/LoginResponse"
    },
    "_register_request": {
      "$ref": "#/definitions/RegisterRequest"
    },
    "_register_response": {
      "$ref": "#/definitions/RegisterResponse"
    },
    "_tournament_config_set_name_request": {
      "$ref": "#/definitions/TournamentConfigSetNameRequest"
    }
  },
  "definitions": {
    "EchoTreeRole": {
      "description": "Role used for authentication to branches of the database",
      "type": "object",
      "required": [
        "password",
        "read_echo_trees",
        "read_write_echo_trees",
        "role_id"
      ],
      "properties": {
        "password": {
          "type": "string"
        },
        "read_echo_trees": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "read_write_echo_trees": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "role_id": {
          "type": "string"
        }
      }
    },
    "LoginRequest": {
      "type": "object",
      "required": [
        "password",
        "username"
      ],
      "properties": {
        "password": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "LoginResponse": {
      "type": "object",
      "required": [
        "roles"
      ],
      "properties": {
        "roles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EchoTreeRole"
          }
        }
      }
    },
    "RegisterRequest": {
      "type": "object",
      "properties": {
        "password": {
          "type": [
            "string",
            "null"
          ]
        },
        "username": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "RegisterResponse": {
      "type": "object",
      "required": [
        "auth_token",
        "roles",
        "server_ip",
        "url",
        "uuid"
      ],
      "properties": {
        "auth_token": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EchoTreeRole"
          }
        },
        "server_ip": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "uuid": {
          "type": "string"
        }
      }
    },
    "TournamentConfigSetNameRequest": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    }
  }
}