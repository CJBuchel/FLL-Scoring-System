{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NetworkSchema",
  "type": "object",
  "required": [
    "_login_request",
    "_login_response",
    "_register_request",
    "_register_response",
    "_tournament_config_set_backup_interval_request",
    "_tournament_config_set_endgame_timer_length_request",
    "_tournament_config_set_name_request",
    "_tournament_config_set_retain_backups_request",
    "_tournament_config_set_season_request",
    "_tournament_config_set_timer_length_request"
  ],
  "properties": {
    "_login_request": {
      "$ref": "#/definitions/LoginRequest"
    },
    "_login_response": {
      "$ref": "#/definitions/LoginResponse"
    },
    "_register_request": {
      "$ref": "#/definitions/RegisterRequest"
    },
    "_register_response": {
      "$ref": "#/definitions/RegisterResponse"
    },
    "_tournament_config_set_backup_interval_request": {
      "$ref": "#/definitions/TournamentConfigSetBackupIntervalRequest"
    },
    "_tournament_config_set_endgame_timer_length_request": {
      "$ref": "#/definitions/TournamentConfigSetEndgameTimerLengthRequest"
    },
    "_tournament_config_set_name_request": {
      "$ref": "#/definitions/TournamentConfigSetNameRequest"
    },
    "_tournament_config_set_retain_backups_request": {
      "$ref": "#/definitions/TournamentConfigSetRetainBackupsRequest"
    },
    "_tournament_config_set_season_request": {
      "$ref": "#/definitions/TournamentConfigSetSeasonRequest"
    },
    "_tournament_config_set_timer_length_request": {
      "$ref": "#/definitions/TournamentConfigSetTimerLengthRequest"
    }
  },
  "definitions": {
    "EchoTreeRole": {
      "description": "Role used for authentication to branches of the database",
      "type": "object",
      "required": [
        "password",
        "read_echo_trees",
        "read_write_echo_trees",
        "role_id"
      ],
      "properties": {
        "password": {
          "type": "string"
        },
        "read_echo_trees": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "read_write_echo_trees": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "role_id": {
          "type": "string"
        }
      }
    },
    "LoginRequest": {
      "type": "object",
      "required": [
        "password",
        "username"
      ],
      "properties": {
        "password": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "LoginResponse": {
      "type": "object",
      "required": [
        "roles"
      ],
      "properties": {
        "roles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EchoTreeRole"
          }
        }
      }
    },
    "RegisterRequest": {
      "type": "object",
      "properties": {
        "password": {
          "type": [
            "string",
            "null"
          ]
        },
        "username": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "RegisterResponse": {
      "type": "object",
      "required": [
        "auth_token",
        "roles",
        "server_ip",
        "url",
        "uuid"
      ],
      "properties": {
        "auth_token": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EchoTreeRole"
          }
        },
        "server_ip": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "uuid": {
          "type": "string"
        }
      }
    },
    "TournamentConfigSetBackupIntervalRequest": {
      "type": "object",
      "required": [
        "interval"
      ],
      "properties": {
        "interval": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        }
      }
    },
    "TournamentConfigSetEndgameTimerLengthRequest": {
      "type": "object",
      "required": [
        "timer_length"
      ],
      "properties": {
        "timer_length": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        }
      }
    },
    "TournamentConfigSetNameRequest": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "TournamentConfigSetRetainBackupsRequest": {
      "type": "object",
      "required": [
        "retain_backups"
      ],
      "properties": {
        "retain_backups": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        }
      }
    },
    "TournamentConfigSetSeasonRequest": {
      "type": "object",
      "required": [
        "season"
      ],
      "properties": {
        "season": {
          "type": "string"
        }
      }
    },
    "TournamentConfigSetTimerLengthRequest": {
      "type": "object",
      "required": [
        "timer_length"
      ],
      "properties": {
        "timer_length": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        }
      }
    }
  }
}